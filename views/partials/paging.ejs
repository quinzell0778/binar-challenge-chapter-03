<div class="container mb-5">
    <div class="row">
        <div class="col-1">
            <div class="row">
                <h5>Limit</h5>
            </div>
            <div class="row">
                <select class="form-select paging" style="width: 56px">
                    <option selected value="10">10</option>
                    <option value="20">20</option>
                    <option value="40">40</option>
                </select>
            </div>
        </div>
        <div class="col-11">
            <div class="row">
                <h5>Jump to Page</h5>
            </div>
            <div class="row">
                <div class="paging-flex">
                    <div class="paging-jump">
                        <select class="form-select paging" style="width: 76px; margin-right: 0px;">
                            <option selected value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                        <button type="button" class="paging paging-btn">Go</button>
                    </div>
                    <div class="pages">
                        <div class="paging" style="border-radius: 2px">
                            <nav>
                                <ul class="pagination" style="border-radius: 2px">
                                    <li class="paging-item">
                                        <a class="page-link" href="#" aria-label="Previous">
                                            &laquo;
                                        </a>
                                    </li>
                                    <li class="paging-item current">
                                        <a class="page-link current" href="#">1</a>
                                    </li>
                                    <li class="paging-item"><a class="page-link" href="#">2</a></li>
                                    <li class="paging-item"><a class="page-link" href="#">3</a></li>
                                    <li class="paging-item"><a class="page-link" href="#">...</a></li>
                                    <li class="paging-item"><a class="page-link" href="#">9</a></li>
                                    <li class="paging-item">
                                        <a class="page-link" href="#" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>